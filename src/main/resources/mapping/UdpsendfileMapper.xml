<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hx.dao.UdpsendfileMapper" >
  <resultMap id="BaseResultMap" type="com.hx.model.Udpsendfile" >
  </resultMap>
<insert id="insertUdpsendfile" parameterType="com.hx.model.Udpsendfile">
INSERT INTO udpsendfile
  <trim prefix="(" suffix=")" suffixOverrides=",">
    <if test="receiverid != null and receiverid != ''">
      receiverid,
    </if>
    <if test="filename != null and filename != ''">
      filename,
    </if>
    <if test="recipient != null and recipient != ''">
      recipient,
    </if>
    <if test="posttime != null and posttime != ''">
      posttime,
    </if>
    <if test="userid != null and userid != ''">
      userid,
    </if>
  </trim>
  <trim prefix=" values (" suffix=")" suffixOverrides=",">
    <if test="receiverid != null and receiverid != ''">
      #{receiverid,jdbcType=INTEGER},
    </if>
    <if test="filename != null and filename != ''">
      #{filename,jdbcType=VARCHAR},
    </if>
    <if test="recipient != null and recipient != ''">
      #{recipient,jdbcType=VARCHAR},
    </if>
    <if test="posttime != null and posttime != ''">
      #{posttime,jdbcType=TIMESTAMP},
    </if>
    <if test="userid != null and userid != ''">
      #{userid,jdbcType=INTEGER},
    </if>
  </trim>
</insert>
  
  <select id="selectUpdsendfile" resultMap="BaseResultMap" parameterType="Integer">
    SELECT id,receiverid,filename,recipient,posttime FROM udpsendfile where userid=#{id}
    ORDER BY posttime DESC limit #{pageStart},#{pageSize}
  </select>
</mapper>